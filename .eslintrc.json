{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "extends": ["standard", "eslint-config-prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-var": "error",
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
